<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="300dp"
    tools:context="se.mah.k3.lecture_4_examples_adapter_extra.FragmentSpinners"
    android:orientation="vertical"
    android:background="#ffffffff">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center"
        android:id="@+id/tv_spinner_r"
        android:textColor="#000000"
        android:text="@string/name"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="338dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_dialog"
        android:src="@drawable/profilbild"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/tv_spinner_r"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hej"
        android:id="@+id/tv_spinner_temp"
        android:textColor="#000000"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/iv_dialog"
        android:layout_centerHorizontal="true" />


</RelativeLayout>